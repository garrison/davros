<DavrosUploader @fullscreen={{true}} @name="content" as |dropzone queue|>
  {{#if dropzone.active}}
    <div id="dropzone-overlay">
      <div class="message">
        <Icon @icon="add_circle" />
        Drop files or directories to add them to
        <PathBreadcrumb @path={{this.model.path}} />
      </div>
    </div>
  {{/if}}

  {{#if queue.length}}
    <div class="upload-progress">
      <PaperProgressLinear @warn={{true}} @value={{queue.progress}} />
    </div>
  {{/if}}

  <FileUpload @name="content" @multiple={{true}} @onfileadd={{route-action "upload"}} @class="upload-placeholder">
  </FileUpload>
</DavrosUploader>

<PhotoSwipe @shareEl={{false}} @items={{this.directoryGalleryItems}} as |photoswipe|>
  <TitleBar>
    <div class="title text-white text-lg flex-1">
      Files in
      <PathBreadcrumb @path={{this.model.path}} />

      {{#if this.model.name}}
        {{this.model.name}} /
      {{/if}}
    </div>

    <div class="actions hidden sm:block">
      {{#if this.canEdit}}
        <button type="button" class="icon-button p-1 pb-0 mx-2 rounded hover:bg-blue-700 new-directory-button" {{on "click" (fn chooseUpload)}}>
          <Icon @icon="file_upload" @ariaLabel="Upload file" class="block" />

          <EmberTooltip>
            Upload
          </EmberTooltip>
        </button>

        <div class="relative inline-block">
          <BasicDropdown as |modal|>
            <modal.Trigger>
              <button type="button" class="icon-button p-1 pb-0 mx-2 rounded hover:bg-blue-700">
                <Icon @icon="add_circle_outline" @ariaLabel="New directory" />

                <EmberTooltip>
                  New Directory
                </EmberTooltip>

              </button>
            </modal.Trigger>

            <modal.Content class="rounded-sm shadow-sm border">
              <NewDirectoryDialog @active={{true}} @onCreate={{route-action "newDirectory"}} @onClose={{fn (mut this.newDialogActive) false}} />
            </modal.Content>
          </BasicDropdown>
        </div>
      {{/if}}

      {{#if this.directoryGalleryItems.length}}
        <button type="button" class="icon-button p-1 pb-0 mx-2 rounded hover:bg-blue-700" {{on "click" (fn photoswipe.actions.open)}}>
          <Icon @icon="photo" @ariaLabel="Slideshow" />

          <EmberTooltip>
            Slideshow
          </EmberTooltip>
        </button>
      {{/if}}

      <button type="button" class="icon-button p-1 pb-0 mx-2 rounded hover:bg-blue-700" {{on "click" this.downloadDirectory}}>
        <Icon @icon="file_download" aria-label="Download directory as zip" />

        <EmberTooltip>
          Download (zip)
        </EmberTooltip>
      </button>

      {{#if this.canEdit}}
        <button type="button" class="icon-button p-1 pb-0 mx-2 rounded hover:bg-blue-700 delete-button" {{on "click" (fn (mut this.deleteDialogActive) true)}}>
          <Icon @icon="delete" @ariaLabel="Delete"/>

          <EmberTooltip>
            {{#if this.isRoot}}
              Delete Everything
            {{else}}
              Delete Directory
            {{/if}}
          </EmberTooltip>
        </button>
      {{/if}}
    </div>

    {{!-- only displayed on mobile --}}
    <div class="compact-actions block sm:hidden">
      <div class="more relative">
        <BasicDropdown @position="target-right target" @width={{4}} as |menu|>
          <menu.Trigger>
            <button type="button" class="more-button pr-2 mt-1">
              <Icon @icon="menu" class="md-menu-origin" ariaLabel="Menu"/>
            </button>
          </menu.Trigger>

          <menu.Content class="rounded-md bg-white shadow-xs">
            <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
              {{#if this.canEdit}}
                <MenuItem {{on "click" (fn this.chooseUpload)}} @id="menu-upload-file">
                  <p class="label flex-1">Upload</p>
                  <Icon @icon="file_upload" @class="md-menu-align-target"/>
                </MenuItem>

                <MenuItem>
                  <button type="button" class="relative w-full" {{on "click" this.preventDefault}}>
                    <BasicDropdown as |modal|>
                      <modal.Trigger class="flex text-left">
                        <p class="label flex-1">New Directory</p>
                        <Icon @icon="add_circle_outline" class="md-menu-align-target"/>
                      </modal.Trigger>

                      <modal.Content class="rounded-sm shadow-sm border">
                        <NewDirectoryDialog @active={{true}} @onCreate={{route-action "newDirectory"}} @onClose={{menu.actions.close}} />
                      </modal.Content>
                    </BasicDropdown>
                  </button>

                </MenuItem>
              {{/if}}

              <MenuItem {{on  "click" (fn (mut this.galleryEnabled) true)}}>
                <p class="label flex-1">View Slideshow</p>
                <Icon @icon="photo" class="md-menu-align-target"/>
              </MenuItem>

              <MenuItem {{on "click" this.downloadDirectory}} @id="menu-download-directory">
                <p class="label flex-1">Download (zip)</p>
                <Icon @icon="file_download" class="md-menu-align-target"/>
              </MenuItem>

              {{#if this.canEdit}}
                <MenuItem @class="danger" {{on "click" (fn (mut this.deleteDialogActive) true)}}>
                  <p class="label flex-1">Delete Directory</p>
                  <Icon @icon="delete" class="md-menu-align-target"/>
                </MenuItem>
              {{/if}}
            </div>
          </menu.Content>
        </BasicDropdown>
      </div>
    </div>

    <DeleteDialog @active={{this.deleteDialogActive}} @onDelete={{route-action "delete"}} @onClose={{fn (mut this.deleteDialogActive) false }}>
      Are you sure you want to delete
      {{#if this.isRoot}}
        <b>absolutely everything</b>
        {{~else~}}
        this directory
        {{~/if~}}?
        It will also be deleted from any synced clients.
    </DeleteDialog>
  </TitleBar>
</PhotoSwipe>


{{#if this.model.sortedFiles}}
  <table class="file-list w-full {{if this.showExtraFields "" "noExtraFields"}}">
    <thead>
      <tr class="text-left text-sm sm:text-md">
        <th class="name py-2 pl-6">Name</th>
        {{#if this.showExtraFields}}
        <th class="updated py-2">
          <a href="#" {{on "click" (toggle this "showExtraFields")}}>
            <span class="short block sm:hidden">
              Updated
            </span>
            <span class="long hidden sm:block">
              Updated
            </span>
          </a>
        </th>
        <th class="size py-2 pr-4 text-right">
          <a href="#" {{on "click" (toggle this "showExtraFields")}}>
            <span class="short block sm:hidden">
              Size
            </span>
            <span class="long hidden sm:block">
              Size
            </span>
          </a>
        </th>
        {{else}}
        <th class="fields pr-4 text-right">
          <a href="#" {{on "click" (toggle this "showExtraFields")}}>
            <Icon @icon="chevron_left" />
          </a>
        </th>
        {{/if}}
      </tr>
    </thead>

    <tbody>
      {{#each this.model.sortedFiles as |file|}}
        <tr class="text-sm md:text-base">
          <td class="p-2" colspan={{if this.showExtraFields '1' '3'}}>
            <LinkTo @route="file" @model={{file.linkedPath}} class="filename p-2 table table-fixed w-full">
              {{#if file.isDirectory}}
                <Icon @icon="folder" class="mr-3 ml-4 float-left" />
              {{else}}
                {{#if (eq file.type "image")}}
                  <ImageThumbnail class="mr-3 ml-4 h-full float-left" @original={{file.rawPath}} @timestamp={{file.mtime}} @width={{24}} @height={{24}} @op="fit" />
                {{else}}
                  <Icon @icon={{file.typeIcon}} class="mr-3 ml-4 float-left" />
                {{/if}}
              {{/if}}

              <div class="truncate">{{file.name}}</div>
            </LinkTo>
          </td>

          {{#if this.showExtraFields}}
            <td class="updated p-2" title={{file.mtime}}>
              <span class="short truncate block sm:hidden">
                {{#if this.model.lotsOfFiles}}
                  {{moment-from-now file.mtime locale="en-short" hideAffix=true}}
                {{else}}
                  {{moment-from-now file.mtime locale="en-short" interval=5000 hideAffix=true}}
                {{/if}}
              </span>

              <span class="long truncate hidden sm:block">
                {{#if this.model.lotsOfFiles}}
                  {{moment-from-now file.mtime locale="en"}}
                {{else}}
                  {{moment-from-now file.mtime locale="en" interval=5000}}
                {{/if}}
              </span>
            </td>

            <td class="size p-2 pr-4 text-right" title="{{commify file.size}} bytes">
              <span class="short block sm:hidden">
                {{filesize file.size}}
              </span>
              <span class="long hidden sm:block">
                {{filesize file.size}}
              </span>
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="empty-notice">
    This directory is empty. You can <a href="#" {{on "click" (fn this.chooseUpload)}}>upload some files</a> or just drag them in.
  </div>
{{/if}}
